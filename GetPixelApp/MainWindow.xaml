<Window x:Class="GetPixelApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GetPixelApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="260" Width="220" FontSize="14" ResizeMode="CanMinimize">
    <Grid>
        <StackPanel>
            <Label x:Name="lbTimer" Height="140" Content="45" FontSize="100" HorizontalContentAlignment="Center"/>
            <Rectangle x:Name="imgPixelColor" Height="40"/>
            <Button x:Name="btnStart" Content="Start" Height="20" Click="btnStart_Click"/>
            <Button x:Name="btnRestart" Content="Restart" Height="20" Click="btnRestart_Click"/>
        </StackPanel>
    </Grid>
</Window>
